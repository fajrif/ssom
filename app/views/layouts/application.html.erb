<!doctype html>
<html lang="en">
<head>
<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Rubik:400,500,700">
<%= stylesheet_link_tag :application %>
<%= csrf_meta_tag %>
<title>GOX</title>
</head>
<body>
<%= render "shared/header" if request.path != terms_path && request.path != privacy_path && request.path != guidelines_path && request.path != contact_path %>
<%= yield %>
<%= render "shared/footer" %>
<!-- video Modal -->
<div class="modal fade videomodalsec" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <img src="assets/close.svg" alt="">
        </button>
        <!-- 16:9 aspect ratio -->
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="" id="video" allowscriptaccess="always" allow="autoplay"></iframe>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- login modal -->
<div class="modal fade modalstyle" id="loginsignupmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="modallogo text-center">
          <img src="assets/logo.svg" width="55" alt="">
        </div>
        <div class="modalform">
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation"><a href="#login" class="active" aria-controls="home" role="tab" data-toggle="tab">Login</a></li>
            <li role="presentation"><a href="#signup" aria-controls="profile" role="tab" data-toggle="tab">Signup</a></li>
          </ul>
          <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active show" id="login" aria-labelledBy="login">
              <div class="accountform">
                <form action="/find-interest" method="GET">
                  <div class="form-group">
                    <label for="usernameLogin" class="form-label">Username</label>
                    <input type="text" class="form-control" id="usernameLogin" aria-describedby="emailHelp" placeholder="Enter your username">
                  </div>
                  <div class="form-group">
                    <label for="passwordLogin" class="form-label">Password</label>
                    <input type="password" class="form-control" id="passwordLogin" placeholder="Enter your password">
                  </div>
                  <div class="form-group text-center modalbtn">
                    <button type="submit" class="btn btn-outline-primary mt-4 minWdBtn-2">Login</button>
                    <a href="#" class="forgotpassword mt-2">Forgot Password</a>
                    <a href="#" class="mt-3 mb-4">or</a>
                    <button type="submit" class="btn btn-secondary btnicon minWdBtn-2"><img src="assets/facebook-icon.png" style="margin-top:3px;">Connect with Facebook</button>
                  </div>
                </form>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="signup" aria-labelledBy="signup">
              <div class="accountform">
                <form action="/find-interest" method="GET">
                  <div class="form-group">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Select your username">
                    <span style="font-size:10px;">You can change your GOX username later</span>
                  </div>
                  <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Choose your password">
                  </div>
                  <div class="form-group">
                    <div class="form-row">
                      <div class="col-lg-6">
                        <label for="month" class="form-label">Date of Birth</label>
                        <input class="form-control" id="month" placeholder="Month">
                      </div>
                      <div class="col-lg-6">
                        <div class="form-row">
                          <div class="col-lg-6">
                            <label for="day" class="form-label">&nbsp;</label>
                            <input class="form-control" id="day" placeholder="Day">
                          </div>
                          <div class="col-lg-6">
                            <label for="year" class="form-label">&nbsp;</label>
                            <input class="form-control" id="year" placeholder="Year">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" id="email" placeholder="e.g. you@gox.id">
                  </div>
                  <div class="form-group text-center modalbtn">
                    <button type="submit" class="btn btn-outline-primary mt-4 minWdBtn-2">Signup</button>
                    <a href="#" class="forgotpassword mt-2">Forgot Password</a>
                    <a href="#" class="mt-3 mb-4">or</a>
                    <button type="submit" class="btn btn-secondary btnicon minWdBtn-2"><img src="assets/facebook-icon.png" style="margin-top:3px;">Connect with Facebook</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Optional JavaScript -->
<%= javascript_include_tag :application %>
<%= yield :tail %>
</body>
</html>
