<section id="contact_us">
	<div class="contact-us">
		<div class="container">
			<div class="title-heading">
				<h2>
					CONTACT US
				</h2>
			</div>
			<div class="contactForm">
				<div class="row">
					<div class="col-md-5">
						<div class="contact-info contactAdd">
							<h4>JAKARTA</h4>
							<h6>Jl. Ahmad Dahlan, Radio Dalam</h6>
							<h6>P : +62 812 34567</h6>
							<h6>F : +62 876 54321</h6>
						</div>
					</div>
					<div class="col-md-7">
						<%= flash_message %>
						<div class="contact-info">
						<%= simple_form_for @contact, as: :contact, url: contact_path, html: { method: :post, class: "quform" } do |f| %>
							<div class="form-group">
								<input type="text" name="contact[name]" id="contact_name" placeholder="Name" class="form-control">
							</div>
								<div class="form-group">
								<input type="text" name="contact[email]" id="contact_email" placeholder="EMAIL"  class="form-control">
							</div>
								<div class="form-group">
								<textarea type="text" name="contact[message]" id="contact_message" placeholder="MESSAGE"  class="form-control" ></textarea>
							</div>
							<button type="submit" class="btn btnStyle btnContact">
								<span>send</span>
							</button>
						<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
