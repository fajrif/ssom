<p><small><%= "Display total #{@portfolios.count} portfolios" %></small></p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th>Total Pictures</th>
      <th>Categories</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for portfolio in @portfolios %>
      <tr>
				<td><strong><%= link_to portfolio.title, admins_portfolio_path(portfolio) %></strong></td>
				<td><%= portfolio.pictures.try(:count) %></td>
				<td><%= portfolio.categories_text %></td>
        <td class="actions">
          <%= link_to 'Show', admins_portfolio_path(portfolio), :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Destroy', admins_portfolio_path(portfolio), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @portfolios %>
