<% content_for :sidebar do %>
  <%= render "admins/shared/error_messages", :target => @banner %>
<% end %>

<%= simple_form_for [:admins, @banner], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <fieldset>
    <%= f.input :title %>
    <%= f.input :image %>
  </fieldset>
  <%= f.error :base %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <% unless @banner.new_record? %>
    <%= link_to "Cancel", admins_banner_path(@banner), :class => 'btn' %>
    <% else %>
    <%= link_to "Cancel", admins_banners_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>
