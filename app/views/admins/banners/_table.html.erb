<p><small><%= "Display total #{@banners.count} banners" %></small></p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th>Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for banner in @banners %>
      <tr>
				<td><strong><%= link_to banner.title, admins_banner_path(banner) %></strong></td>
				<td><%= image_tag banner.image_url(:thumb) %></td>
        <td class="actions">
          <%= link_to 'Show', admins_banner_path(banner), :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Destroy', admins_banner_path(banner), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @banners %>
