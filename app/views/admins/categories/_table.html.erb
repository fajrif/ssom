<p><small><%= "Display total #{@categories.count} categories" %></small></p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th>Count</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for category in @categories %>
      <tr>
				<td><strong><%= link_to category.name, admins_category_path(category) %></strong></td>
				<td><%= category.portfolios.try(:count) %></td>
        <td class="actions">
          <%= link_to 'Show', admins_category_path(category), :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Destroy', admins_category_path(category), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @categories %>
