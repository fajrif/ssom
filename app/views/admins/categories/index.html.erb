<% title "List of categories" %>

<% content_for :sidebar do %>
  <%= form_tag admins_categories_url, { :id => "index_search", :method => :get } do %>
    <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header">Search categories</li>
        <li>
        <div class="input-prepend">
          <span class="add-on"><i class="icon-search"></i></span>
          <%= text_field_tag :search, params[:search], :class => "span2", :placeholder => "Search by name" %>
        </div>
        <%= hidden_field_tag :sort, params[:sort] %>
        <%= hidden_field_tag :direction, params[:direction] %>
        </li>
      </ul>
    </div>
  <% end %>
<% end %>

<div id="index_table">
  <%= render 'table' %>
</div>

<div class="form-actions">
	<%= link_to 'New category', new_admins_category_path, :class => 'btn btn-primary' %>
</div>
