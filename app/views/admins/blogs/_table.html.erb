<p><small><%= "Display total #{@blogs.count} blogs" %></small></p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th>Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for blog in @blogs %>
      <tr>
				<td><strong><%= link_to blog.title, admins_blog_path(blog) %></strong></td>
				<td><%= image_tag blog.image_url(:thumb) %></td>
        <td class="actions">
          <%= link_to 'Show', admins_blog_path(blog), :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Destroy', admins_blog_path(blog), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @blogs %>
