<style>
body {
background-color: #000 !important;
}
</style>
<section>
<div class="container">
	<div class="projectDetails">
		<div class="row">

			<div class="col-md-12" style="color:#fff !important;">
				<div class="swiperContent" style="margin-bottom:20px;">
					<% if is_mobile_request? %>
					<%= link_to "< back to projects", projects_path %>
					<br/>
					<br/>
					<% end %>
					<h2><%= @portfolio.title %></h2>
					<ul>
						<li><span>Category : </span><%= @portfolio.categories_text %></li>
						<li><span>Type : </span><%= @portfolio.type_project %></li>
						<li><span>Size : </span><%= @portfolio.size_text %></li>
						<li><span>Location : </span><%= @portfolio.location %></li>
					</ul>
				</div>
			</div>

			<div class="col-md-12">
				<% @portfolio.pictures.each do |picture| %>
					<img src="<%= picture.image_url %>" class="imageDetail" />
				<% end %>
			</div>

		</div>
	</div>
</div>
</section>
